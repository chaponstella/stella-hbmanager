{% extends 'base.html.twig' %} {% block h1 %} Créer une nouvelle chambre {%
endblock %} {% block content %} {% if room %}
<form action="{{env.base_path ~ '/rooms/' ~ room.id ~ '/edit'}}" method="post">
  {% else %}
  <form action="{{env.base_path ~ '/rooms'}}" method="post">
    {% endif %}

    <div class="form-group">
      <label for="formNumber">Number</label>
      <input
        name="number"
        id="formNumber"
        type="text"
        class="form-control"
        value="{{ room ? room.number : '' }}"
      />
    </div>

    {% if room %}
    <button type="submit" class="btn btn-warning">Éditer la Chambre</button>
    {% else %}
    <button type="submit" class="btn btn-primary">Créer la Chambre</button>

    {% endif %}
    <button class="btn btn-dark">
      <a href="{{ env.base_path }}"> Retour a l'Accueil </a>
    </button>
  </form>
  {% endblock %}
