{% extends 'base.html.twig' %} 

{% block h1 %} 
Créer un nouveau Client 
{% endblock %} 
{% block content %} 
{% if client %}

<form
  action="{{env.base_path ~ '/clients/' ~ client.id ~ '/edit'}}"
  method="post"
>
  {% else %}
  <form action="{{env.base_path ~ '/clients'}}" method="post">
    {% endif %}

    <div class="form-group">
      <label for="formFirstName">First Name</label>
      <input
        name="firstname"
        id="formFirstName"
        type="text"
        class="form-control"
        value="{{ client ? client.firstname : '' }}"
      />
    </div>
    <div class="form-group">
      <label for="formLastName">Last Name</label>
      <input
        name="lastname"
        id="formLastName"
        type="text"
        class="form-control"
        value="{{ client ? client.lastname : '' }}"
      />
    </div>
    <div class="form-group">
      <label for="formEntry_date">Entry Date</label>
      <input
        name="entry_date"
        id="formEntry_date"
        type="date"
        class="form-control"
        value="{{ client ? client.entry_date : '' }}"
      />
    </div>
    <div class="form-group">
      <label for="formDeparture_date">Entry Date</label>
      <input
        name="departure_date"
        id="formDeparture_date"
        type="date"
        class="form-control"
        value="{{ client ? client.departure_date : '' }}"
      />
    </div>

    {% if client %}
    <button type="submit" class="btn btn-warning">Éditer le Client</button>
    {% else %}
    <button type="submit" class="btn btn-primary">Créer le Client</button>

    {% endif %}
    <button class="btn btn-dark">
      <a href="{{ env.base_path }}"> Retour a l'Accueil </a>
    </button>
  </form>
  {% endblock %}

